<%= form_for @client do |f| %>
  <%#= f.hidden_field :company_id, :value => current_user.company.id %>
  <% if @client.errors.any? %>
    <div class="grid_16" id="error_explanation">
      <% @client.errors.full_messages.each do |msg| %>
        <p class="error">
          <%= msg %>
        </p>
      <% end %>
    </div>
    <%= render :partial => "shared/separator" %>
  <% end %>
  <div class="grid_8">
    <%= f.label :name, t('.name') %>
    <%= f.text_field :name %>
  </div>
  <div class="grid_8">
    <%= f.label :email, t('.email') %>
    <%= f.email_field :email %>
  </div>
  <%= render :partial => "shared/separator" %>
  <div class="grid_8">
    <%= f.label :company_name, t('.company_name') %>
    <%= f.text_field :company %>
  </div>
  <div class="grid_8">
    <%= f.label :address, t('.address') %>
    <%= f.text_field :address %>
  </div>
  <%= render :partial => "shared/separator" %>
  <div class="grid_16">
    <%= f.submit t('.save_client') %>
    <%= link_to t('.cancel'), clients_path, :confirm => t('.confirm_cancel') %>
  </div>
<% end %>
