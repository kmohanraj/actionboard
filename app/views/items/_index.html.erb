<%=link_to'new item', new_item_path%>
<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Description</th>
      <th>Unit cost</th>
      <th>Discount</th>
      <th>Balance</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |company| %>
      <tr>
        <td><%= company.quantity %></td>
        <td><%= company.description%></td>
        <td><%= number_to_currency company.unit_cost%></td>
        <td><%= number_to_currency company.discount%></td>
        <td><%= company.balance%></td>
        <td><%= number_to_currency company.total_price %></td>
        <td>
          <%= link_to 'Show', company %> |
          <%= link_to 'Edit', edit_company_path(company) %> |
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
           <%= link_to t('.show'), @invoice %>
          <%#= link_to t('.pdf'), :controller=>'invoices', :action=>'show', :format => :pdf), :target => '_blank' %>
          <%= link_to t('.pdf'), item_path(company, :format => :pdf), :target=> '_blank' %>

          <%= link_to 'Add collection', :controller=>'invoices', :action=>'edit', :id=>company.id %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

