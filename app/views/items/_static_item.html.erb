<tr>
  <td class="align-right">
    <%= l(@item.created_at, :format => :short) %>
  </td>
  <td class="align-right">
    <%= @item.quantity %>
  </td>
  <td><%= @item.description%></td>
  <td class="align-right">
    <%= number_to_currency (@item.unit_cost) %>
  </td>
  <td class="align-right">
    <%= number_to_currency (@item.tax) %>
  </td>
  <td class="align-right">
    <%= number_to_currency (@item.balance) %>
  </td>
  <td class="align-right">
    <%= @item.discount.to_s + "%" %>
  </td>
  <td class="align-right">
    <%= number_to_currency(@item.total_price) %>
  </td>
</tr>
